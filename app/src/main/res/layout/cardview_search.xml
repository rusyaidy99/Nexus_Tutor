<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_tutor"
    android:layout_width="180dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"

    app:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteOne"
        android:paddingBottom="5dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_tutor"
                android:layout_width="180dp"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/nopicture"
                />
            <TextView
                android:id="@+id/tv_tutor_gender"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:background="@color/whiteOne"
                android:padding="3dp"
                android:layout_marginTop="5dp"
                android:elevation="4dp"
                android:fontFamily="@font/opensansregular"
                android:textSize="9sp"
                android:layout_height="wrap_content"
                android:text="Location"/>
        </FrameLayout>


        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Tutor Name"
            android:textSize="13sp"
            android:textColor="@color/oceanThree"
            android:layout_gravity="bottom"
            android:fontFamily="@font/opensansregular"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/tv_tutorname"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="5dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/opensansregular"
            android:textSize="9sp"
            android:layout_height="wrap_content"
            android:text="Location"/>
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="location not stated"
            android:textColor="@color/oceanTwo"
            android:layout_gravity="bottom"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/opensansregular"
            android:paddingLeft="5dp"
            android:id="@+id/tv_tutor_location"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="5dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/opensansregular"
            android:textSize="9sp"
            android:layout_height="wrap_content"
            android:text="Subject Teach"/>
        <TextView
            android:id="@+id/tv_tutor_subject"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingLeft="5dp"
            android:text="subject"
            android:fontFamily="@font/opensansregular"
            android:textColor="@color/oceanTwo" />

    </LinearLayout>
</androidx.cardview.widget.CardView>