<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardview_student_active"
    android:layout_margin="5dp"
    android:clickable="true"
    app:cardCornerRadius="15dp"
    android:foreground="?android:attr/selectableItemBackground">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/img_active_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_baseline_person_outline_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_active_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Mr.John"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/img_active_profile"
            app:layout_constraintTop_toTopOf="@+id/img_active_profile" />

        <TextView
            android:id="@+id/tv_active_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="International Language (French)"

            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tv_active_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_active_name" />

        <TextView
            android:id="@+id/lbl_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Started Session"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/img_active_profile"
            app:layout_constraintTop_toBottomOf="@+id/tv_active_subject" />

        <TextView
            android:id="@+id/tv_active_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:text="1/1/2020"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/lbl_date"
            app:layout_constraintTop_toBottomOf="@+id/lbl_date" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

