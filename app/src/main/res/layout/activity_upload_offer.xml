<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_height="match_parent"
android:layout_width="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activity_upload_offer">

    <!-- TODO: Update blank fragment layout -->
    <Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_box_shadow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/img_btn_back"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar3"
        app:layout_constraintEnd_toStartOf="@+id/et"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toStartOf="@+id/toolbar3"
        app:layout_constraintTop_toTopOf="@+id/toolbar3"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_chevron_left_black_24dp" />

    <TextView
        android:id="@+id/et"
        android:layout_width="wrap_content"
        android:fontFamily="@font/opensansregular"
        android:layout_height="wrap_content"
        android:text="Post Tutor Offer "
        android:textColor="@color/colorBlack"
        android:textSize="20sp"

        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/toolbar3"
        app:layout_constraintTop_toTopOf="@+id/toolbar3" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"

        android:paddingBottom="30dp"
        android:elevation="20dp"
        android:id="@id/layout_form"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar3">

        <TextView
            android:id="@+id/lbl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:background="@drawable/background_text3"
            android:fontFamily="@font/opensansregular"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"

            android:paddingBottom="5dp"
            android:text="Title"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_title"
            android:layout_width="340dp"
            android:layout_height="35dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_input"
            android:drawableEnd="@drawable/ic_remove_red_eye_black_24dp"
            android:ems="10"
            android:fontFamily="@font/opensansregular"
            android:hint="Write your title"
            android:inputType="textPersonName"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:password="false"
            android:textColor="#000000"
            android:textColorHint="@color/gradcolor2"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_title" />

        <TextView
            android:id="@+id/lbl_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_text3"
            android:fontFamily="@font/opensansregular"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:text="Description"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"

            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_title" />

        <EditText
            android:id="@+id/et_description"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:fontFamily="@font/opensansregular"
            android:gravity="top|left"
            android:hint="Write your description here"
            android:inputType="textMultiLine"
            android:lines="4"
            android:maxLines="7"
            android:minLines="3"
            android:paddingLeft="15sp"
            android:paddingTop="3dp"
            android:paddingRight="15sp"
            android:password="false"
            android:scrollbars="vertical"
            android:textColor="#000000"
            android:textColorHint="@color/gradcolor2"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_description" />

        <TextView
            android:id="@+id/lbl_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_text3"
            android:fontFamily="@font/opensansregular"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:text="Subject Preferences"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"

            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_description" />

        <EditText
            android:id="@+id/et_subject"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_input"
            android:drawableEnd="@drawable/ic_remove_red_eye_black_24dp"
            android:ems="10"
            android:fontFamily="@font/opensansregular"
            android:gravity="top|left"
            android:hint="Write your field of subject you wanted"
            android:inputType="textMultiLine"
            android:lines="2"
            android:maxLines="2"
            android:paddingLeft="15sp"
            android:paddingTop="3dp"
            android:paddingRight="15sp"
            android:password="false"
            android:textColor="#000000"
            android:textColorHint="@color/gradcolor2"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_subject" />

        <TextView
            android:id="@+id/lbl_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_text3"
            android:fontFamily="@font/opensansregular"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:text="Location"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"

            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_subject" />

        <EditText
            android:id="@+id/et_city"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:fontFamily="@font/opensansregular"
            android:hint="city"
            android:inputType="textPersonName"
            android:paddingLeft="10sp"
            android:paddingTop="5dp"
            android:paddingRight="15sp"
            android:paddingBottom="5dp"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <EditText
            android:id="@+id/et_state"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:fontFamily="@font/opensansregular"
            android:hint="state"
            android:inputType="textPersonName"
            android:paddingLeft="10sp"
            android:paddingTop="5dp"
            android:paddingRight="15sp"
            android:paddingBottom="5dp"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="144dp"
            android:text="State"
            android:fontFamily="@font/opensansregular"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_location" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/opensansregular"
            android:text="City"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_location" />

        <TextView
            android:id="@+id/lbl_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_text3"
            android:fontFamily="@font/opensansregular"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:text="Tutor Gender Preferences"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_city" />

        <RadioGroup
            android:id="@+id/radio_group_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_gender">

            <RadioButton
                android:id="@+id/radio_all"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:fontFamily="@font/opensansregular"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="All"
                android:textColor="@drawable/radio_textcolor_selector" />

            <RadioButton
                android:id="@+id/radio_male"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:fontFamily="@font/opensansregular"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Male Only"
                android:textColor="@drawable/radio_textcolor_selector" />

            <RadioButton
                android:id="@+id/radio_female"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:fontFamily="@font/opensansregular"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"

                android:text="Female Only"
                android:textColor="@drawable/radio_textcolor_selector" />
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>



    <Button
        android:id="@+id/btn_upload"
        android:layout_width="408dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/green_button_upload"
        android:fontFamily="@font/opensansregular"
        android:text="Upload"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_form" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_box_shadow"
        android:text="Cancel"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/opensansregular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_upload" />


</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

